<resources>
  <attr format="color" name="colorToolbarControlNormal"/>
  <attr format="color" name="colorToolbarControlUnselected"/>



  <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
    <item name="titleTextAppearance">@style/TextAppearance.Widget.App.Toolbar.Title</item>
    <item name="android:background">?colorPrimary</item>
  </style>

  <style name="TextAppearance.Widget.App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Widget.App.InputLayout" parent="Widget.Design.TextInputLayout">

  </style>

  <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="Widget.App.Button.Action" parent="Widget.AppCompat.Button">
    <item name="android:minHeight">60dp</item>
    <item name="android:textColor">@android:color/holo_blue_light</item>
  </style>

  <style name="TextAppearance.App.Helper" parent="TextAppearance.Design.Error">
    <item name="android:textColor">?android:attr/textColorTertiary</item>
  </style>

</resources>
